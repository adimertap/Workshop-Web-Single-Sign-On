                            i(data-feather='arrow-right')
                // Pricing column 2
                .col-xl-4.col-lg-6.mb-4.mb-xl-0
                    .card.h-100
                        .card-header.bg-transparent
                            span.badge.badge-secondary-soft.text-secondary.badge-pill.py-2.px-3.mb-2 Team
                            .pricing-columns-price
                                | $39
                                span /month
                        .card-body.p-0
                            ul.list-group.list-group-flush
                                li.list-group-item
                                    i.text-secondary.mr-2(data-feather='check-circle')
                                    | Up to 5 user accounts
                                li.list-group-item

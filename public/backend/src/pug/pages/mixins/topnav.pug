                            .dropdown-notifications-item-content-details
                                | Emily Fowler · 58m
                    //- Example Message 2
                    a.dropdown-item.dropdown-notifications-item(href='#!')
                        img.dropdown-notifications-item-img(src='https://source.unsplash.com/4ytMf8MgJlY/60x60')
